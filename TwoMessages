/** Show a message on the video screen */
const xapi = require('xapi');

var i = 3;  //Condition to be met

function message1() {
  xapi.command('UserInterface Message Alert Display', {
    Title: 'Testing',
    Text: 'This is a test',
    Duration: 10,
  });
}

function message2() {
  xapi.command('UserInterface Message Alert Display', {
    Title: 'TEST',
    Text: 'THIS IS A TEST',
    Duration: 10,
  });
}

function notification(){      //If i = 3, display message 2. Else, message 1.
  if (i == 3){                //If condition met
   message2();
  }
  else message1();
}  

notification();
